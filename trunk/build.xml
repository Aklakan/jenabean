<project name="jenabean" default="default">

	<property name="src" location="src" />
	<property name="build" location="build" />
	<property name="dist" location="dist" />
    <property name="vocab.dir"       value="src/example"/>
	<property name="vocab.tool"      value="jena.schemagen" />

	<description>
    	library for saving and retrieving java beans from RDF.
    </description>

	<target name="default" depends="init" description="--> library for saving and retrieving java beans from RDF.">
		<javac srcdir="${src}" destdir="${build}">
			<classpath>
				<fileset dir="jenalib">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

	<target name="init">
		<tstamp />
		<mkdir dir="${build}" />
		<mkdir dir="${dist}" />
	</target>

	<target name="jar" depends="default">
		<jar destfile="${dist}/jenabean.jar" basedir="${build}" 
			excludes="**/test/*.class **/example/*.class" />
	</target>

	<target name="clean">
		<delete dir="${build}" />
		<delete dir="${dist}" />
	</target>	

	  <!-- Section: vocabulary generation -->
	  <target name="vocabularies" depends="schemagen" />

	  <target name="schema.check">
	    <uptodate
	       property="schema.nobuild"
	       srcFile="${vocab.dir}/geonames.owl"
	       targetFile="${vocab.dir}/Vocabulary.java" />
	  </target>

	  <target name="schemagen" depends="schema.check" unless="schema.nobuild">
	    <java classname="${vocab.tool}" fork="yes">
	  	  <classpath>
	  	      <pathelement path="${classpath}"/>
	  	      <fileset dir="jenalib">
	  	        <include name="**/*.jar"/>
	  	      </fileset>
	  	  </classpath>
	      <arg value="-i" />
	      <arg value="file:${vocab.dir}/geonames.owl" />
	      <arg value="-o" />
	      <arg value="${vocab.dir}" />
	      <arg value="--package" />
	      <arg value="test"/>
          <arg value="--ontology" />
      	  <arg value="-n"/>
	      <arg value="Vocabulary"/>	
	    </java>
	  </target>
</project>