<project name="blog example" default="default">

	<property name="src" location="src" />
	<property name="build" location="web/WEB-INF/classes" />
	<property name="lib" location="web/WEB-INF/lib" />


	<description>
    	an example app that uses jenabean
    </description>

	<target name="default" depends="init" description="example app">
		<javac srcdir="${src}" destdir="${build}">
			<classpath>
				<fileset dir="web/WEB-INF/lib">
					<include name="**/*.jar" />
				</fileset>
				<fileset dir="lib">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</javac>
	</target>

	<target name="init">
		<tstamp />
		<mkdir dir="${build}" />
		<mkdir dir="${lib}" />
		<copy  todir="${lib}">
			<fileset dir="stripeslib"/>
			<fileset dir="../jenalib"/>
			<fileset dir="../dist"/>
		</copy>
	</target>

	<target name="jar" depends="default">
		<jar destfile="blog.war" basedir="web" />
	</target>

	<target name="clean">
		<delete dir="${build}" />
		<delete dir="${lib}" />
	</target>	

</project>